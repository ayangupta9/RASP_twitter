{
  "name": "Social Media privacy Extension",
  "version": "1.1",
  "description": "Captures images from X (Twitter) and Instagram and Facebook sending them to the extension for display.",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": ["https://*.instagram.com/*", "https://*.x.com/*", "https://*.twitter.com/*", "https://*.facebook.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.instagram.com/*", "https://*.x.com/*", "https://*.twitter.com/*", "https://*.facebook.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "extension_logo.png"
  }
}
